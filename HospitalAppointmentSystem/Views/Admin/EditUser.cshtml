@model EditUserViewModel
@{
    Layout = "_Dashboard";
}

<div style="display:flex; flex-direction:column; align-items:center;">
    <h5 style="display:flex; justify-content:center; margin-top:10px;">Kullanıcı Düzenle</h5>
    <div class="col-md-4 form-area">
        <div class="container form-box">
            <form asp-action="EditUser" method="post" class="needs-validation" novalidate>
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group mb-2">
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Ad " required>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" asp-for="@Model.UserSurname" placeholder="Soyad " required>
                    <span asp-validation-for="@Model.UserSurname" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" asp-for="@Model.FullName" placeholder="Kulanıcı Adı " required>
                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input type="email" class="form-control" asp-for="@Model.EmailAddress" placeholder="E-Mail " required>
                    <span asp-validation-for="@Model.EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" asp-for="@Model.PhoneNumber" placeholder="(___)-___-__-__" required>
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="card mb-2">
                    <div class="card-header">
                        Parola Güncelle
                    </div>
                    <div class="form-group mb-2">
                        <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifre ">
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-1">
                        <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifre(Tekrar) ">
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Kaydet</button>

            </form>
        </div>
    </div>
</div>



